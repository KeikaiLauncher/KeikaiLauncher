<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/app_row_column_height"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/application_icon_desc"
        android:src="@android:mipmap/sym_def_app_icon"/>

    <ImageView
        android:id="@+id/appPinToTop"
        android:layout_width="@dimen/app_pin_size"
        android:layout_height="@dimen/app_pin_size"
        android:contentDescription="@string/appmenu_pin_to_top"
        android:src="@drawable/ic_star_yellow_18dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/appLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/app_text_upper_margin"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:padding="0dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.2"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="@dimen/app_icon_label_size"/>
</FrameLayout>
